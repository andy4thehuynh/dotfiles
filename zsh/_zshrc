# Set name of the theme to load. Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each time that oh-my-zsh is loaded.
ZSH_THEME="cloud" # use random to find new themes
export EDITOR='vim'

# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh
source $ZSH/oh-my-zsh.sh

# Path to zsh-autosuggestions
source $HOME/Code/dotfiles/zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

# Vim colors with Tmux
alias tmux="TERM=screen-256color-bce tmux"

# Set CLICOLOR if you want Ansi Colors in iTerm2
export CLICOLOR=1

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git brew tmux)

export DISABLE_AUTO_TITLE=true
export PATH="/usr/local/bin:$PATH"

# Disable auto correct
unsetopt correct_all

# Sass watch
# alias sass-it="sass --watch --sourcemap=none scss:css --style compressed"

# Set GoPath
export GOPATH=$HOME/Code/go
export GOCODE=$GOPATH/src/github.com/andy4thehuynh
export PATH=$PATH:$GOPATH/bin

# Global Git Related aliases
alias -g ga='git add'
alias -g gaa='git add -A'
alias -g gc='git commit'
alias -g gca='git commit --amend'
alias -g gs='git status'
alias -g gss='git status -s'
alias -g gco='git checkout'
alias -g gcob='git checkout -b'
alias -g gd='git diff'
alias -g gdc='git diff --cached'
alias -g gm='git merge --no-ff'
alias -g gic='git issue create'
alias -g grh='git reset HEAD'

# Rails
alias -g be='bundle exec'
# alias -g migrate='bundle exec rake db:migrate db:test:prepare'
# alias rr="bundle exec rake routes"

# Lamby deploys to AWS require resetting local enviornment after deploys
# source: https://lamby.custominktech.com/docs/quick_start
alias -g samdeploy='./bin/deploy ; ./bin/setup'


# [Lamby] recommends using this so you run the docker version of AWS
# source: https://github.com/customink/cookiecutter-ruby-workshop#-install-docker
alias aws='docker run --rm -it --tty -v "${HOME}/.aws:/root/.aws" -v "${PWD}:/aws" "amazon/aws-cli"'

# Reloading configs
alias r!='source ~/.zshrc; source ~/.vimrc; tmux source-file ~/.tmux.conf'
alias r_zsh!='source ~/.zshrc'
alias r_tmux!='tmux source-file ~/.tmux.conf'
alias r_vimrc!='source ~/.vimrc'
alias -g r_python!='asdf reshim python' # asdf - when installing a package and it's not executable

# Tmux
alias -g tks='tmux kill-session'
alias t="traffic"

# FZF
[ -f ~/.fzf.zsh  ] && source ~/.fzf.zsh

# asdf (needed to add to shell)
. /usr/local/opt/asdf/asdf.sh

# tabtab source for packages
# uninstall by removing these lines
[[ -f ~/.config/tabtab/zsh/__tabtab.zsh ]] && . ~/.config/tabtab/zsh/__tabtab.zsh || true
