# Global Git Related aliases
alias -g g='git'
alias -g ga='git add'
alias -g gaa='git add -A'
alias -g gc='git commit'
alias -g gca='git commit --amend'
alias -g gs='git status'
alias -g gss='git status -s'
alias -g gco='git checkout'
alias -g gcob='git checkout -b'
alias -g gd='git diff'
alias -g gdc='git diff --cached'
alias -g grh='git reset HEAD'
alias -g gdh='git diff origin/master..HEAD'  # review changes from the master branch in Github


# Reload ZSH
alias -g rz!='source ~/.zshrc'


# Rails
alias -g be='bundle exec'
alias -g rr="bundle exec rails routes"
alias -g migrate='bundle exec rake db:migrate db:test:prepare'


# Bootstrap dotfiles (create symlinks)
alias -g b!='cd ~/Code/dotfiles/; ruby bootstrap; cd -'


# Workspace shortcuts
alias -g cdd='cd /Users/andyhuynh/Code/dotfiles'
alias -g cdl='cd /Users/andyhuynh/Code/Leetcode'
alias -g cdz='cd /Users/andyhuynh/Code/zenscribe'
alias -g cde='cd /Users/andyhuynh/Code/eat-playground'
alias -g cdr='cd /Users/andyhuynh/.config/asdf/installs/ruby/3.0.0/lib/ruby/gems/3.0.0/gems'  # Rails
alias nc='cd /Users/andyhuynh/Code/dotfiles ; nvim /Users/andyhuynh/Code/dotfiles/config/nvim/init.lua'
alias zc='cd /Users/andyhuynh/Code/dotfiles ; nvim /Users/andyhuynh/Code/dotfiles/config/zsh/_zshrc'
alias kc='cd /Users/andyhuynh/Code/dotfiles ; nvim /Users/andyhuynh/Code/dotfiles/config/kitty/kitty.conf'


# Starship directory
# Starship (must be toward end of file)
eval "$(starship init zsh)"
export STARSHIP_CONFIG=$HOME/.config/starship/starship.toml

# asdf plugin for ZSH (must be toward end of file)
ASDF_FORCE_PREPEND=yes . "$HOME/.asdf/asdf.sh"
. "$HOME/.asdf/asdf.sh"